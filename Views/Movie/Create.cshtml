@model MovieModel

<div class="row col-12">
    <div class="col-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h5>Add Movie</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Movie" asp-action="CreateMovie" method="post">
                    <div class="mb-3">
                        <label class='form-label'>Movie Title</label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Title"/>
                    </div>
                    <div class="mb-3">
                        <label class='form-label'>ReleaseDate</label>
                        <input asp-for="ReleaseDate" type="date" class="form-control" placeholder="Release Date"/>
                    </div>
                    <div class="mb-3">
                        <label class='form-label'>Genre</label>
                        <input asp-for="Genre" type="text" class="form-control" placeholder="Genre"/>
                    </div>
                    <div class="mb-3">
                        <label class='form-label'>Price</label>
                        <input asp-for="Price" type="number" class="form-control" placeholder="Price"/>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
             $.ajax({
            type: "POST",
            url:"@Url.Action("CreateMovie")",
            dataType: "json",
            data:{title:"Iron Man"},
            success: function(response) {
                console.log(response)
            }
        })
        })
       
    </script>
}